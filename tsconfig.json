{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "target": "esnext",
    "lib": ["dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "out",
    "inlineSources": true,
    "experimentalDecorators": true,
  },
  "include": [
    "script/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
